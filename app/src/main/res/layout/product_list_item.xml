<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CompanyName"
        android:id="@+id/companyName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Product Name"
        android:id="@+id/productNameLabel"
        android:layout_below="@+id/companyName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/productPriceLabel"
        android:layout_toStartOf="@+id/productPriceLabel"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/btnAddToCart"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/holo_green_dark"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="$$"
        android:id="@+id/productPriceLabel"
        android:layout_alignBottom="@+id/btnAddToCart"
        android:layout_toLeftOf="@+id/btnAddToCart"
        android:layout_toStartOf="@+id/btnAddToCart"
        android:layout_marginRight="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/btnEditButton"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/productPriceLabel"
        android:layout_toEndOf="@+id/productPriceLabel"
        android:background="@android:color/holo_green_dark"
        android:visibility="invisible"/>
</RelativeLayout>